
  <!-- HTML FORMAT FROM CODEPEN: https://codepen.io/marci640/pen/VrYZOz -->
  <!DOCTYPE html>
  <html>
  <head>
    <title>My Resume</title>
    <link rel="stylesheet" type="text/css" href="css/style.css">
    
  <body>
    <div class="container">


  <!-- PROFILE INFO -->
      <div class="sidebar">
        <div class="sidebar-top">
          <img class="profile-image" src="{{student.photoUrl}}" />
          <div class="profile-basic">
            <h1 class="name">{{student.firstName}} {{student.lastName}}</h1>
          </div>
        </div>
        <div class="profile-info">
          <p> {{student.bio}}   
          </p>
        </div>
        <div class="profile-info">
          <p class="key">Contact : </p>
          <p class="value">{{student.phoneNumber}}</p>
        </div>

        <div class="profile-info">
          <p class="key" >Email : </p>
          <p class="value" >{{student.email}}</p>
        </div>

        <div class="profile-info">
          <p class="key" >Address : </p>
          <p class="value" >{{studentaddress}}</p>
        </div>
        <div class="profile-info">
          <a class="social-media" href="{{student.linkedinUrl}}" target="_blank" >LinkedIn</a>
          <a class="social-media" href="{{student.twitterHandle}}" target="_blank" >Twitter</a>
          <a class="social-media" href="{{student.personalBlogUrl}}" target="_blank" >Personal Blog</a>
          <a class="social-media" href="{{student.resumeUrl}}" target="_blank" >Resume</a>
          <a class="social-media" href="{{student.githubUrl}}" target="_blank" >Github</a>
        </div>
      </div>
  <!-- END PROFILE INFO -->


  <!-- WORK EXPERIENCE -->

    <div class="content">
      <div class="work-experience">
        <h1 class="heading"> Work Experience</h1>
        <div class="info" v-for="experience in student.experiences" >
          <p class="sub-heading">{{ experience.job_title }} @ {{ experience.company_name }}</p>
          <p class="duration">{{ experience.start_date }} - {{ experience.end_date }}</p>
          <p> {{ experience.details }} </p>
        </div>
      </div>

  <!-- END WORK EXPERIENCE -->


  <!-- EDUCATION INFO -->
      
      <div class="education">
        <h1 class="heading">Education</h1>
        <div class="info" v-for="education in student.educations" >
          <p class="sub-heading"> {{ education.degree }} @ {{ education.university_name }}</p>
          <p class="duration">{{ education.start_date }} - {{ experience.end_date }}</p>
          <p>{{ education.details }}</p>
        </div>
      </div>

  <!-- END EDUCATION INFO -->


  <!-- SKILLS INFO -->
        <div class="skills">
          <h1 class="heading">Skills</h1>
          <div class="info">
            <ul>
              <li v-for="skill in student.skills">{{skill}}</li>
            </ul>
          </div>
        </div>
  <!-- END SKILLS INFO -->


  <!-- CAPSTONE INFO -->
        <div class="capstone">
          <h1 class="heading">Capstone</h1>
          <div class="info" v-for="capstone in student.capstones">
            <p class="sub-heading">{{capstone.capstoneName}}</p>
            <p class="sub-heading">Desription:</p>
            <p>{{capstone.description}}</p>
          </div>
          <div class="info">
            <p class="sub-heading">URL:</p>
            <p>{{capstone.capstoneUrl}}</p>
          </div>
          <div class="info">
            <p>{{capstone.screenshot}}</p>
          </div>
        </div>
  <!-- END CAPSTONE INFO -->
        </div>
      </div>
    </div>
  </body>
  </html>

